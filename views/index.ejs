<!doctype html>
<html lang="pt-br">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastrar Equipamento</title>
      <style>
        * {
          padding: 0;
          margin: 0;
        }
        #section-1 {
            display: flex;
            align-items: center;
            flex-direction: row;
            margin-left: 6%;
            margin-right: 6%;
            gap: 6%;
            flex-wrap: wrap;
            text-align: center;
            justify-content: space-around;
        }

        .card {
            margin-top: 4%;
        }
      </style>
    <link rel="shortcut icon" href="{% static 'img/favicon.ico' %}" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">

</head>
<%- include ('../views/nav.ejs') %> 
  <body class="">
    <form action="" method="POST" class="p-3">
      <% if (sucess === 1) { %>
        <div class="alert alert-success mb-0" role="alert">
        Aula iniciada com sucesso!
        </div>
      <% } %>
      <% if (sucess === 2) { %>
        <div class="alert alert-danger mb-0" role="alert">
        Aula j√° iniciada!
        </div>
      <% } %>
      <section id="section-1" class="text-center flex-row">
        <%for(student of students){ %>
        <div class="card" style="width: 12rem;">
          <img class="card-img-top" src="https://secure.gravatar.com/avatar/4fa8d7fd9dbfdaac434961c5c7160606?s=500&d=mm&r=g" alt="Card image cap">
          <div class="card-body">
            <h6 class="card-title form-control-lg mb-0"><%= student.name %></h6>
            <p class="card-text mb-2">Presente</p>
            <div class="form-check form-switch">
              <input class="form-check-input m-4 mt-0 mb-0" type="checkbox" id="flexSwitchCheckChecked" name="<%= student.name %>" checked>
            </div>
          </div>
        </div>
      <% } %>
      </section>
      <div class="text-center mt-5">
        <input class="btn btn-primary btn-block" style="background: linear-gradient(to right, #0d89fd, #00b0d8); border-color: #00b0d8;" type="submit" value="Iniciar Aula!">
        <br>
        <br>
      </div>
    </form>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  </body>
</html>